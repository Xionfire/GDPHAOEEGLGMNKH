<?xml version="1.0"?>
<robot name="ppnc_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="joint_z_limit" value="-0.4" />
  
  <xacro:property name="joint_z_rail_length" value="${0.0 - joint_z_limit}" />
  <xacro:property name="joint_z_rail_offset" value="${joint_z_limit / 2.0}" />

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 1.0"/>
      </geometry>
      <material name="blue"/>
    </visual>
    
    <visual>
      <origin xyz="0 0.4 1.0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.8 0.02"/>
      </geometry>
      <material name="green"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 1.0"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.0834" ixy="0.0" ixz="0.0" iyy="0.0834" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="joint_y" type="prismatic">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 1.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.4" upper="0.4" effort="10" velocity="1"/>
  </joint>

  <link name="link1">
    <visual>
      <origin xyz="0 0.4 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.8 0.1"/>
      </geometry>
      <material name="grey"/>
    </visual>
    
    <visual>
      <origin xyz="0 0.8 ${joint_z_rail_offset}" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 ${joint_z_rail_length}"/> 
      </geometry>
      <material name="green"/>
    </visual>
    
    <collision>
      <origin xyz="0 0.4 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.8 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0.4 0" rpy="0 0 0"/>
      <mass value="0.8"/>
      <inertia ixx="0.0065" ixy="0.0" ixz="0.0" iyy="0.0534" iyz="0.0" izz="0.0065"/>
    </inertial>
  </link>

  <joint name="joint_z" type="prismatic">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0.8 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="${joint_z_limit}" upper="0.0" effort="10" velocity="1"/> 
  </joint>

  <link name="link2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.1 0.05"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.5 0.1 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.0025"/>
      <inertia ixx="0.0000026" ixy="0.0" ixz="0.0" iyy="0.000052" iyz="0.0" izz="0.000054"/>
    </inertial>
  </link>

</robot>